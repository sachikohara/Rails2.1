<div class="FirstView">
  <div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-md-8 text-center">
        <h2 class="FirstView_title text-white mb-4">
          Potepan Shareで<br>
          まだ体験したことのない<br>
          旅をしよう
        </h2>
        <div class="search-box p-4 shadow rounded bg-white mx-auto">
          <%= form_with url: search_rooms_path, method: :get, local: true, class: 'form-inline justify-content-center' do |form| %>
            <div class="form-group mx-2">
              <%= form.text_field :keyword, class: 'form-control', placeholder: 'フリーワード検索' %>
            </div>
            <div class="form-group mx-2">
              <%= form.select :address, ["東京", "大阪", "京都", "札幌"], {include_blank: 'エリア選択'}, class: 'form-control' %>
            </div>
            <%= form.submit "検索", class: 'btn btn-primary mx-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
