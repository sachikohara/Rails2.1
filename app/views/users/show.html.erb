<h1>ユーザープロフィール</h1>

<p>Email: <%= @user.email %></p>
<p>名前: <%= @user.name %></p>
<p>画像: </p>

<% if @user.image.present? && @user.image.attached? %>
  <%= image_tag @user.image.variant(resize: "200x200"), alt: "User Image" %>
<% else %>
  <%= image_tag 'icon.png', alt: "Default Icon", width: "100", height: "100" %>
<% end %>

<p>プロフィール: <%= @user.profile %></p>

<% if current_user == @user %>
  <%= link_to "アカウントを編集", edit_account_user_path(@user) %>
  <%= link_to "プロフィールを編集", edit_profile_user_path(@user) %>
<% end %>

<%= link_to 'ホームに戻る', root_path %>
