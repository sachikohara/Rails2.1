<h1>プロフィールを編集</h1>

<%= form_for @user, url: update_profile_user_path(@user), method: :put, html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :image %>
  <%= f.file_field :image %>
  <% if @user.image.present? && @user.image.attached? %>
    <%= image_tag @user.image.variant(resize: "100x100") %>
  <% else %>
    <%= image_tag 'icon.png', alt: 'Default Icon', width: '100', height: '100' %>
  <% end %>

  <%= f.label :profile %>
  <%= f.text_area :profile %>

  <%= f.submit "プロフィールを更新" %>
<% end %>

<%= link_to "ユーザープロフィールに戻る", user_path(@user) %>
